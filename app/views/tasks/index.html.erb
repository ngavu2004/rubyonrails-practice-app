<p style="color: green"><%= notice %></p>

<% content_for :title, "Tasks" %>

<h1>Tasks</h1>

<h2>Incomplete Tasks: </h2>
<div id="tasks">
  <% @tasks.where(finished_at: nil).each do |task| %>
    <%= render task %>
  <% end %>
</div>

<h2>Completed Tasks: </h2>
<div id="tasks">
  <% @tasks.where.not(finished_at: nil).each do |task| %>
    <%= render task %>
  <% end %>
</div>

<%= link_to "New task", new_task_path %>
